{
  "manifest_version": 2,
  "name": "Reco - Screen Recorder",
  "description": "Screen Recorder tool",
  "version": "1.0.3",
  "icons": {
    "512": "icons/512.png",
    "256": "icons/256.png",
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png"
  },
  "browser_action": {
    "default_title": "Reco - Screen Recorder",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "permissions": [
    "desktopCapture",
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": [
      "./scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "./scripts/content.js"
      ]
    }
  ]
}